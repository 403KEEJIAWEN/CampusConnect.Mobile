<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="CampusConnect.Mobile.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:CampusConnect.Mobile.Views"
       Title="CampusConnect">

    <!-- Login page (shown by default) -->
    <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" Route="login" />

    <!-- Register page -->
    <ShellContent ContentTemplate="{DataTemplate local:RegistrationPage}" Route="RegistrationPage" />

    <!-- Main app tabs (after login) -->
    <TabBar Route="main">
     
        
    
        
    </TabBar>

</Shell>
